<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
        
    <FrameLayout 
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#6495ED"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#4169E1"
            >
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="뒤로"
                android:textSize="11pt"
                android:background="#4169E1"
                android:textColor="#ffffffff"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"

                android:text="운동기록 작성하기"
                android:textSize="10pt"
                android:gravity="center"
                android:background="#4169E1"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                ></Button>
            <Button
                android:id="@+id/write"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="작성"
                android:textSize="11pt"
                android:background="#4169E1"
                android:textColor="#ffffffff"
                ></Button>
        </LinearLayout>
        
        
        
        <TextView
            android:id="@+id/myName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#6495ED"
            android:textColor="#0066cc"
            android:textSize="10pt"
            android:gravity="center"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:background="#0066cc">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="날짜"
                    android:textSize="11pt"
                    android:background="#6495ED"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="운동명"
                    android:textSize="11pt"
                    android:background="#6495ED"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="운동량"
                    android:textSize="11pt"
                    android:background="#6495ED"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="칼로리"
                    android:textSize="11pt"
                    android:background="#6495ED"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                />
        </LinearLayout>
        
        <ListView 
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            ></ListView>
        
        
        </LinearLayout>
        </FrameLayout>

    <!-- write Form -->
    <FrameLayout 
    android:id="@+id/writew"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:visibility="invisible"
    android:background="#003399"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#fff0f8ff"
        android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0066cc"
            android:orientation="horizontal">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="정보를 입력하세요."
                android:textSize="10pt"
                android:textColor="#ffffffff"
                />
                <Button
                 android:id="@+id/closewrw"
                 android:text="X"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_weight="6"
                 android:layout_gravity="right"
                 android:textSize="8pt"
                 android:textColor="#003399"
                 android:background="#ffffffff"
                 />      
            </LinearLayout>

            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_margin="30dp">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동명 : "
                android:textSize="8pt"
                android:layout_marginTop="10dp"

                    android:textColor="#696969"
                />

                <Spinner
                android:id="@+id/exerciseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                </Spinner>
                <!--
                <EditText
                android:id="@+id/ei_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="5pt"
                android:hint="활동한 운동을 입력하세요."
                />
                -->
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동량 : "
                android:textSize="8pt"
                android:layout_marginTop="10dp"
                    android:textColor="#696969"
                />
                <EditText
                android:id="@+id/er_amount"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="5pt"
                    android:inputType="number"
                android:hint="ex. 10(분)"
                    android:textColor="#696969"
                />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리 : "
                android:textSize="8pt"
                android:layout_marginTop="10dp"
                    android:textColor="#696969"
                />
                <EditText
                android:id="@+id/er_kal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="5pt"
                android:editable="false"
                android:hint="운동량을 입력시 자동계산"
                    android:textColor="#696969"
                />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜: "
                android:layout_marginTop="10dp"
                    android:textColor="#696969"
                />
                <EditText
                android:id="@+id/er_date"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="5pt"
                    android:inputType="number"
                android:hint="날짜를 입력하세요- mmdd"
                    android:textColor="#696969"
                />
                <Button
                android:id="@+id/send"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="작성"
                android:textSize="10pt"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="#0066cc"
                android:textColor="#ffffffff"

                />
            
        </LinearLayout>
        </LinearLayout>
    
</FrameLayout>

</RelativeLayout>
