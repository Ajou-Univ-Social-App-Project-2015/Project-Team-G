<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

        
    <FrameLayout 
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#6495ED"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#4169E1"
            >
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="뒤로"
                android:textSize="11pt"
                android:background="#4169E1"
                android:textColor="#ffffffff"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"

                android:text="혈압기록 작성하기"
                android:textSize="10pt"
                android:gravity="center"
                android:background="#4169E1"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                ></Button>
            <Button
                android:id="@+id/write"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="작성"
                android:textSize="11pt"
                android:background="#4169E1"
                android:textColor="#ffffffff"
                ></Button>
        </LinearLayout>
        
        
        
        <TextView
            android:id="@+id/myName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#6495ED"
            android:textColor="#0066cc"
            android:textSize="10pt"
            android:gravity="center"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="#0066cc"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="날짜"
                android:textSize="11pt"
                android:background="#6495ED"
                android:textColor="#ffffffff"
                android:gravity="center"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="고혈압"
                android:textSize="11pt"
                android:background="#6495ED"
                android:textColor="#ffffffff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="저혈압"
                android:textSize="11pt"
                android:background="#6495ED"
                android:textColor="#ffffffff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="맥박"
                android:textSize="11pt"
                android:background="#6495ED"
                android:textColor="#ffffffff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="부정맥"
                android:textSize="11pt"
                android:background="#6495ED"
                android:textColor="#ffffffff"
                android:gravity="center"
                />

            
            
        </LinearLayout>
        
        <ListView 
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background = "#ffffffff"
            ></ListView>
        
        
        </LinearLayout>
        </FrameLayout>
        
    <FrameLayout 
    android:id="@+id/writew"
    android:layout_width="300dp"
    android:layout_height="500dp"
        android:visibility="invisible"
    android:background="#003399"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#fff0f8ff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0066cc"
            android:orientation="horizontal"
            
             >

            <TextView 
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_weight="1"
               android:gravity="center"
               android:text="정보를 입력하세요."
               android:textSize="10pt"
               android:textColor="#ffffffff"
                />
             <Button 
                 android:id="@+id/closewrw"
                 android:text="X"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_weight="6"
                 android:layout_gravity="right"
                 android:textSize="8pt"
                 android:textColor="#003399"
                 android:background="#ffffffff"
                 />      
        </LinearLayout>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_margin="5dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고혈압 : "
                android:textSize="8pt"
                android:layout_marginTop="5dp"
                android:textColor="#696969"
                />
            <EditText 
                android:id="@+id/brp_high_pressure"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="5pt"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="고혈압을 입력하세요."
                android:textColor="#696969"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저혈압 : "
                android:textSize="8pt"
                android:layout_marginTop="5dp"
                android:textColor="#696969"
                />
            <EditText
                android:id="@+id/brp_low_pressure"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="5pt"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="저혈압을 입력하세요."
                android:textColor="#696969"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맥박 : "
                android:textSize="8pt"
                android:layout_marginTop="5dp"
                android:textColor="#696969"
                />
            <EditText
                android:id="@+id/brp_pulse"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="5pt"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="맥박을 입력하세요."
                android:textColor="#696969"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부정맥 감지 : "
                android:textSize="8pt"
                android:layout_marginTop="5dp"
                android:textColor="#696969"
                />
            <RadioGroup
                android:id="@+id/radiog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예"
                    android:textSize="8pt"
                    android:textColor="#000000"
                    />
                <RadioButton
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니오"
                    android:textSize="8pt"
                    android:textColor="#000000"
                    />
            </RadioGroup>


            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜: "       
                android:layout_marginTop="5dp"
                android:textColor="#696969"
                />
            <EditText 
                android:id="@+id/brp_date"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="5pt"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="날짜를 입력하세요- mmdd"
                android:textColor="#696969"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모: "       
                android:layout_marginTop="5dp"
                android:textColor="#696969"
                />
            <EditText 
                android:id="@+id/brp_memo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:hint="메모 하세요."
                android:textColor="#696969"
                />
            <Button 
                android:id="@+id/send"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="작성"
                android:textSize="10pt"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#0066cc"
                android:textColor="#ffffffff"

                />
            
        </LinearLayout>
        ></LinearLayout>
    
</FrameLayout>

    <FrameLayout 
    android:id="@+id/memow"
    android:layout_width="500dp"
    android:layout_height="420dp"
    android:layout_margin="100dp"
    android:visibility="invisible"
    android:background="#003399"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical"
        
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0066cc"
            android:orientation="horizontal"
            
             >

            <TextView 
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_weight="1"
               android:gravity="center"
               android:text="메모 기록"
               android:textSize="10pt"
               android:textColor="#ffffffff"
                />
             <Button 
                 android:id="@+id/closemw"
                 android:text="X"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_weight="6"
                 android:layout_gravity="right"
                 android:textSize="8pt"
                 android:textColor="#003399"
                 android:background="#ffffffff"
                 />      
        </LinearLayout>
       
            <TextView 
                android:id="@+id/memotxt"
                android:layout_width="match_parent"
                android:layout_height="370dp"             
                android:textSize="8pt"
                android:layout_marginTop="5dp"
                android:background="#ffffffff"
                android:textColor="#696969"
                
                />           
        
        </LinearLayout>
    
</FrameLayout>
    
    
</RelativeLayout>
